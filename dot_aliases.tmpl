miru() {
    if [ $# -eq 0 ]; then
        echo "Usage: miru <folder>"
        return 1
    fi

    folder="$1"
    if [ ! -d "$folder" ]; then
        echo "Error: $folder is not a valid directory"
        return 1
    fi

    mpv --loop-playlist "$folder"/*.(mp4|mkv|avi|mov|flv|wmv|webm)
}

